# ========================================
# Server Configuration
# ========================================
PORT=5000
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/blog-cms

# MongoDB Atlas (Cloud) - Use this format for production:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/blog-cms?retryWrites=true&w=majority

# ========================================
# JWT Configuration
# ========================================
# IMPORTANT: Generate a strong random string for production!
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# ========================================
# CORS Configuration
# ========================================
# Frontend URL (for CORS)
# Development: http://localhost:3000 or http://localhost:8080
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:8080

# ========================================
# File Upload Configuration
# ========================================
# Maximum file size in bytes (5MB = 5 * 1024 * 1024)
MAX_FILE_SIZE=5242880

# ========================================
# Production Notes
# ========================================
# 1. Change JWT_SECRET to a strong random key
# 2. Set NODE_ENV=production
# 3. Use MongoDB Atlas URI for MONGODB_URI
# 4. Set CORS_ORIGIN to your frontend domain
# 5. Use HTTPS in production

